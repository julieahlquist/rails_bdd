<h1>Articles</h1>

<%= link_to 'Log In', new_user_session_path %>
<%= link_to 'New Article', new_article_path %>
<p>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

    <% @articles.each do |article| %>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= link_to 'Show', article_path(article) %></td>
    </tr>
  <% end %>
  
</table>
